@model STRN_Travel_Trip_Project.Models.Siniflar.Comments
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası </h2>
<br />

@using (Html.BeginForm("CommentUpdate", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <label>Kullanıcı Adı</label>
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum, 15, 1, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">UPDATE COMMENTS</button>
}

